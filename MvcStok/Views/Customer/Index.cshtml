@using MvcStok.Models.Entity
@model List<Tbl_Customers>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@using (Html.BeginForm("Index", "Customer", FormMethod.Get))
{
    <p>
        Müştəri  Adı Axtar: @Html.TextBox("par")
        <input type="submit" value="axtar" />
    </p>
}

<table class="table table-bordered">
    <tr>
        <th>Müştəri ID </th>
        <td>Müştəri Adı</td>
        <td>Müştəri Soyadı</td>
        <th>Sil</th>
        <th>Yenilə</th>
        <th>Alert</th>

    </tr>
    <tbody>
        @foreach (var custmr in Model)
        {
            <tr>
                <th>
                    @custmr.ID
                </th>
                <td>
                    @custmr.Name
                </td>
                <td>
                    @custmr.Surname
                </td>
                <td>
                    <a href="/Customer/Delete/@custmr.ID" class=" btn btn-danger">Sil</a>
                </td>
                <td> <a href="/Customer/GetCustomer/@custmr.ID" class="btn btn-success">Update</a></td>
                <td>@Html.ActionLink("Sil Button", "Delete", new { id = custmr.ID }, new { @class = "btn btn-warning", onclick = "return confirm('Silmək İstəyirsiniz?')" })</td>
            </tr>
        }

    </tbody>
</table>

<a href="/Customer/NewCustomer/" class="btn btn-primary">Müştəri Əlavə Et </a>